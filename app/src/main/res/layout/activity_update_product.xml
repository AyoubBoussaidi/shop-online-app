<?xml version="1.0" encoding="UTF-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <ScrollView
        tools:context=".UpdateClientActivity"
        android:background="@drawable/rectangle3"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:padding="10dp"
                android:text="Modification des informations du Produit"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/p_id"
                android:layout_width="360dp"
                android:layout_height="67dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/rectangle0"
                android:hint="Id du produit"
                android:inputType="text"
                android:paddingLeft="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />


            <EditText
                android:id="@+id/Pdescription"
                android:layout_width="360dp"
                android:layout_height="67dp"
                android:layout_marginTop="344dp"
                android:background="@drawable/rectangle0"
                android:hint="Description"
                android:inputType="text"
                android:paddingLeft="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/Pquantite"
                android:layout_width="360dp"
                android:layout_height="67dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/rectangle0"
                android:hint="Quantite"
                android:inputType="number"
                android:paddingLeft="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Pdescription" />

            <EditText
                android:id="@+id/Pprix"
                android:layout_width="360dp"
                android:layout_height="67dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/rectangle0"
                android:hint="Prix"
                android:inputType="number"
                android:paddingLeft="20dp"
                app:layout_constraintBottom_toTopOf="@+id/Pquantite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Pdescription"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/Pdesignation"
                android:layout_width="360dp"
                android:layout_height="67dp"
                android:background="@drawable/rectangle0"
                android:hint="Designation"
                android:inputType="text"
                android:paddingLeft="20dp"
                app:layout_constraintBottom_toTopOf="@+id/Pdescription"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/p_id" />

            <Button
                android:id="@+id/updateProductBtn"
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="636dp"
                android:background="@drawable/adminbutton1"
                android:text="Modifier"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>