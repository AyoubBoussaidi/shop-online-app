<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcomv1"
    tools:context=".ConfirmFinalOrderActivity">


    <ImageView
        android:id="@+id/routeur_confirm_final_order"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/retur"
        android:layout_margin="12dp"
        />

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/almendra"
        android:text="informations presonnel "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/shipment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/rectangle0"
        android:fontFamily="@font/almendra"
        android:hint="Nom"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/shipment_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipment_name"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/rectangle0"
        android:fontFamily="@font/almendra"
        android:hint="Telephone"
        android:inputType="number"
        android:padding="20dp"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/shipment_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipment_phone_number"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/rectangle0"
        android:fontFamily="@font/almendra"
        android:hint="Adresse Complet"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/shipment_cityr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipment_address"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/rectangle0"
        android:fontFamily="@font/almendra"
        android:hint="Ville"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="@color/black" />
        <TextView
            android:id="@+id/total_confirmation_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="45dp"
            android:text="Prix Total : "
            android:maxLines="1"
            android:fontFamily="@font/almendra"
            android:layout_below="@+id/shipment_cityr"
            android:background="@drawable/rectangle0"
            android:padding="20dp"
            android:textSize="18sp"
            android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/calculatot_total_price"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/calculator"
        android:layout_below="@id/shipment_cityr"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="33dp"
        android:padding="7dp"
        />



    <Button
        android:id="@+id/confirm_final_order_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total_confirmation_price"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/btndesign"
        android:fontFamily="@font/almendra"
        android:padding="17dp"
        android:text="Confirmer"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="@color/bleau" />


</RelativeLayout>