<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcomlog"
    tools:context=".clientLogin">

    <ImageView
        android:id="@+id/login_applogo"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="46dp"
        android:background="@drawable/logoapp" />


    <LinearLayout
        android:id="@+id/Linear_layout_in_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/login_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_applogo"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rectangle0"
            android:fontFamily="@font/almendra"
            android:hint="Login"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/input_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_input"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rectangle0"
            android:fontFamily="@font/almendra"
            android:hint="Mot De Passe"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="19sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/Linear1_layout_in_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Linear_layout_in_login"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/input_tele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Linear_layout_in_login"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/rectangle0"
            android:fontFamily="@font/almendra"
            android:hint="Telephone"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="19sp" />


        <Button
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_layout_1"
            android:layout_marginTop="5dp"
            android:background="@drawable/btndesign"
            android:fontFamily="@font/almendra"
            android:padding="10dp"
            android:text="Se Connecter"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:backgroundTint="@color/bleau" />

    </LinearLayout>




    <LinearLayout
        android:id="@+id/linear_layout_1_in_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Linear1_layout_in_login"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        tools:ignore="MissingClass">



        <TextView
            android:id="@+id/forget_password_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:fontFamily="@font/almendra"
            android:text="Mot de passe oublié?"
            android:textColor="@color/black"
            android:textSize="19sp" />
        <TextView
            android:id="@+id/not_admin_panel_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/almendra"
            android:text="je ne suis pas un admin?"
            android:textColor="@color/black"
            android:layout_marginLeft="140dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="invisible" />



    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_layout_2_in_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_1_in_login"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        tools:ignore="MissingClass">
        <com.rey.material.widget.CheckBox
            android:id="@+id/remember_mechikd"
            style="@style/Material.Drawable.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:fontFamily="@font/almendra"
            android:text="Rester connecté"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:textColorHighlight="#000000"
            android:textColorLink="#000000" />

        <TextView
            android:id="@+id/admin_panel_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:fontFamily="@font/almendra"
            android:text="Je suis un Admin?"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>





</RelativeLayout>